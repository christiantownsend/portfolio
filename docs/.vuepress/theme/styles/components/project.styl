.project {
  display: block;
}

.project-preview, .project-placeholder {
  // visibility: visible;
  will-change: transform;
  transition: transform 1.5s var(--default-timing);
  height: 100%;
}

.project-info * {
  min-height: content;
}

.project-thumbnail-mask {
  overflow: hidden;
}

.project-thumbnail {
  width: 100%;
  z-index: -1;
  position: absolute;
  left: 0;
  top: 0;
}

@media (hover: hover), (-ms-high-contrast:none) {

  .project-preview {
    // visibility: hidden;
  }

  .project-row.active {

    .project-preview {
      // visibility: visible;
      // outline: 1px solid var(--color-primary);
    }

    .project-preview, .project-placeholder {
      transform: scale(1.3)
      // transform: translateX(calc(var(--spacing-unit) * 2));p
    }
  }
}

@media screen and (max-width: 1200px) {
  .project-row > * {
    grid-column-start: span 12 !important;
  }

  .project-row .m-first {
    order: -1;
  }
}