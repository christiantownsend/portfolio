@font-face {
    font-family: 'Neue Montreal';
    src: url('/static/fonts/NeueMontreal-Regular.woff2');
}

::selection {
    background: var(--color-primary);
    color: var(--color-neutral-900);
}

::moz-selection {
    background: var(--color-primary);
    color: var(--color-neutral-900);
}

html * {
    font-family: var(--font-stack);
}

body{
    background: var(--color-neutral-900);
    color: var(--color-neutral-100);
    font-size: var(--font-size);
}

hr {
    margin: 0;
    opacity: var(--lightened-opacity)
    color: var(--color-neutral-100);
}

.container {
    padding-inline: 8%;
}

.content__default {
    img, picture {
        width: 100%;
    }

    a {
        text-decoration: underline;
        text-decoration-skip-ink: all;
        text-decoration-thickness: .075em;
        text-underline-offset: .15em;
        text-decoration-color: var(--color-primary);
    }
}

.grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    white-space: normal;
}

.grid > *:not([class*=span]) {
    grid-column-start: span 12;
}

a {
    color: inherit;
    text-decoration: none;
    display: inline;
    // white-space: pre;
}

a:not(.no-arrow) {
    --arrow-spacing: .25em;

    padding-right: calc(1ch + var(--arrow-spacing));
    display: inline-block;
}

a:not(.no-arrow)::after {
    display: inline-block;
    content: 'â†—';
    padding-left: var(--arrow-spacing);
    width: 1ch;
    margin-right: -1ch;
    transition: transform .5s var(--default-timing);
}

a:hover::after, a:hover a::after {
    transform: translateX(.25em);
}

.icon.outbound {
    display: none;
}

ul {
    margin: 0;
    padding: 0;

    li {
        margin-bottom: 1em;
    }
}