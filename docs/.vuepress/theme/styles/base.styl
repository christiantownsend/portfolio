    font-family: 'PP Neue Montreal';
    font-weight: normal;
    font-style: normal;
    src: url('/static/fonts/PPNeueMontreal-Regular.woff2');
}

@font-face {
    font-family: 'PP Neue Montreal';
    font-weight: 500;
    font-style: normal;
