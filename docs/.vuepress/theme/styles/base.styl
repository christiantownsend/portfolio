@font-face {
    font-family: 'Neue Montreal';
    src: url('/static/fonts/NeueMontreal-Regular.woff2');
}

html * {
    font-family: 'Neue Montreal', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

body{
    background: var(--color-neutral-900);
    color: var(--color-neutral-100);
}

hr {
    margin: 0;
}

.container {
    padding-inline: 8%;
}

.grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    white-space: normal;
}

.grid > *:not([class*=span]) {
    grid-column-start: span 12;
}

a {
    color: inherit;
    text-decoration: none;
    display: inline;
    // white-space: pre;
}

a:not(.no-arrow)::after {
    display: inline-block;
    content: 'â†—';
    padding-left: .25em;
    transition: transform .5s cubic-bezier(0.23, 0, 0.24, 1);
}

a:hover::after, a:hover a::after {
    transform: translateX(.25em);
}

.icon.outbound {
    display: none;
}

ul {
    margin: 0;
    padding: 0;

    li {
        margin-bottom: 1em;
    }
}