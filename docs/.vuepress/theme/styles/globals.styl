:root {
    // --color-primary: #d9ff00;
    --color-primary: #e2ff3d;

    --color-neutral-900: #0d111c;
    --color-neutral-900-t: rgba(#0d111c, 0.8);
    // --color-neutral-900: #0c101d;
    // --color-neutral-900-t: rgba(#0c101d, 0.8);

    --color-neutral-100: #f1f1f1;

    --font-stack: 'Neue Montreal', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    --font-size: clamp(1rem, 1vw, 1.3rem);
    --spacing-unit: clamp(1rem, 2.5%, 1.5rem);
    --default-timing: cubic-bezier(0.23, 0, 0.24, 1);
    --lightened-opacity: .6;
    --mobile-breakpoint: 700px;
}