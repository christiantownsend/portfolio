:root {
    // --color-primary: #0dbe51;
    --color-primary: #069743;
    // --color-neutral-900: #dfd9d7;
    // --color-neutral-900-t: rgba(#dfd9d7, 0.8);
    --color-neutral-900: #dadada;
    --color-neutral-900-t: rgba(#dadada, 0.8);
    // --color-neutral-100: #332b2b;
    --color-neutral-100: #333333;
    --color-neutral-100-t: rgba(#333333, 0.2);

    --font-stack: 'PP Neue Montreal', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    --font-size: clamp(1rem, 1vw, 1.3rem);
    --font-weight: 500;
    --spacing-unit: clamp(1rem, 2.5%, 1.5rem);
    --default-timing: cubic-bezier(0.23, 0, 0.24, 1);
    --lightened-opacity: .65;
    --mobile-breakpoint: 700px;

    --transition-duration: .25s;
}

:root.dark {
    --color-primary: #e2ff3d;
    --color-neutral-900: #12141d;
    --color-neutral-900-t: rgba(#12141d, 0.8);
    --color-neutral-100: #f1f1f1;
    --color-neutral-100-t: rgba(#f1f1f1, 0.2);
    --lightened-opacity: .6;
}